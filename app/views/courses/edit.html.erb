</style>
<ul class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="/">
      <em class="fa fa-home"></em>
    </a>
  </li>
  <li class="breadcrumb-item">
    <%= link_to t('configuration_text')+" "+"AcadÃ©mique", { controller: "configuration", action: "advanced" }  %> 
