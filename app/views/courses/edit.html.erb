    <%=  t('courses_text') %> - <%= t('edit_text') %>
  </li>

</ul>
<div class="content-i">
  <div class="content-box">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t('courses_text') %> - <%= t('edit_text') %></h1>
      </div>
    </div><!--/.row-->
    <div class='row'>

      <% unless flash[:notice].nil? %>
        <div class="col-md-12 pull-left">
          <p class="flash-msg"> <%= flash[:notice] %> </p>
        </div>
      <% end %>

   <%= form_with(model: @course, local: true, method: :patch) do |f| %>
  




        
          <div class="form-group col-md-6 pull-left">
            <label class="control-label"><%= "#{t('course_name')}" %></label>
            <%= f.text_field :course_name, :class =>"form-control" %>
          </div>

   <div class="form-group col-md-6 pull-left">
            <label class="control-label"><%= "#{t('section_name')}" %></label>
            <%= f.text_field :section_name, :class =>"form-control" %>
          </div>
          <div class="form-group col-md-6 pull-left">
            <label class="control-label"><%= "#{t('code')}" %></label>
            <%= f.text_field :code, :class =>"form-control" %>
          </div>

   
      <%# unless @grade_types.blank? %>

          <div class="form-group col-md-6 pull-left">
          <div class="control-label"><label>Grading System type</label></div>
          <div class=" ">
            <%= f.select "grading_type", options_for_select( [["GPA",1],["CWA",2],["CCE",3] ]) %>
             <%#= batch_form.select :school_field_id, @school_fields.map { |u| [u.name, u.id] }, {}, class: "form-control" %>
</div>
        </div>
      <%# end %>
   

  <div class="col-md-12 pull-left text-right">
    
            <%= f.submit "Update", class: "btn btn-primary" %>
          </div>
    <% end %>
    <div class="extender"></div>
  
<script type="text/javascript">
  function toggle_grading(){
    if($('course_cce_enabled').checked){
      $("grading").hide();
      $('course_grading_type').value="Normal"
    }
    else{
      $("grading").show();
    }
    return true;
  }
</script>
</div>
