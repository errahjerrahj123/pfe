<ul class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="/">
      <em class="fa fa-home"></em>
    </a>
  </li>
  
 <li class="breadcrumb-item">
  <%= link_to "configuration_text Académique", configuration_advanced_path %> &nbsp;&raquo;&nbsp;
  <%= link_to ('courses_text home'), { controller: 'courses', action:'index' } %> &nbsp;&raquo;&nbsp;
  <%= t('manage_batch') %>
</li>

</ul>
<div class="content-i">
  <div class="content-box">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= ('Niveaux') %> - <%= ('Gérer les classes') %></h1>
      </div>
    </div><!--/.row-->
    <div class="row">
      <div class="col-md-12">
        <div class="panel-default">
          <div class="tabs">
            <ul class="nav nav-tabs">
           
                <li><%= link_to ('Systeme des appréciations') , grading_levels_path %></li>
              
          
              <li><%= link_to ('Transfert de Classe'), batch_transfers_path %></li>

            </ul>
          </div>
        </div>
        <hr>
      </div>
    </div>
    <div class="row">
      <% unless flash[:notice].nil? %>
        <div class="col-md-12 pull-left">
          <p class="flash-msg"> <%= flash[:notice] %> </p>
        </div>
      <% end %>
      <div class="col-md-12 pull-left">
        <div class="form-group">
          <label class="control-label"><%= ('Selectionner un niveau') %></label>
         <%= select_tag :course_name, options_for_select(Course.active.map { |b| [b.course_name + " " + b.section_name, b.id] }, 
          prompt: ('Selectionner un niveau')),
          onchange: "Rails.ajax({url: '#{batch_transfers_update_batch_path}', type: 'GET', data: { course_name: this.value }, beforeSend: function() { $('#loader').show(); }, success: function() { $('#loader').hide(); }});",

           class: 'form-control'
%>
        </div>
        <%#= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" ) %>

      </div>
      <div id="update_batch" class="col-md-12 pull-left" style="width:100%" ></div>
      <div class="extender"></div>
    </div>
  </div>
</div>
